import scala.util.Random

/**
  * Created by stevanus.andrianta on 6/2/2016.
  */
case class WeightGenerator(option: String = "minus0.05until0.05"){

  private def generateWeight: Double = {
    val random = Random.nextDouble() / 10
    if (random > 0.05)
      random - 0.1
    else random
  }

  private def generateWeight2: Double = {
    val random = Random.nextDouble() * 6 / 10
    if (random > 0.3)
      random - 0.6
    else random
  }

  def generate : Double = {
    option match {
      case "minus0.05until0.05" => generateWeight
      case "minus0.3until0.3" => generateWeight2
      case _ => generateWeight
    }
  }

}



